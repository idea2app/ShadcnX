{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "commander-jsx",
    "outDir": "./dist"
  },
  "include": ["source/**/*.ts", "source/**/*.tsx"]
}
